<?xml version="1.0" encoding="utf-8"?>

    <resources>

    <!-- Primary Button Style -->
    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Restaurant Name Text Style -->
    <style name="RestaurantNameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/restaurant_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/restaurant_name_margin_top</item>
    </style>

    <!-- Promotion Text Style -->
    <style name="PromotionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/promotion_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/promotion_margin_top</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar_background</item>
    </style>






    <!-- Base Theme -->
    <style name="Base.Theme.SeatSelection" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorAccent">@color/toolbar_background</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- TextView Style -->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@color/toolbar_background</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/enter_seat_number</item>
    </style>






    <!-- Toolbar Style -->
    <style name="ToolbarStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Total Price Text Style -->
    <style name="TotalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <!-- Seat Number Text Style -->
    <style name="SeatTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/default_hint</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:backgroundTint">@color/toolbar_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="ImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/image_background</item>
    </style>








    <!-- Toolbar Style -->
    <style name="ToolbarStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- CircleView Style -->
    <style name="CircleViewStyle">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <!-- Fragment Style -->
    <style name="FragmentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <!-- Checkbox Style -->
    <style name="CheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/add_more_sugar_on_juice</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Total Price Text Style -->
    <style name="TotalPriceTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/total_price</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:text">@string/submit</item>
    </style>







    <!-- Toolbar Style -->
    <style name="ToolbarStyle4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- RatingBar Style -->
    <style name="RatingBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <!-- EditText Style -->
    <style name="FeedbackEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/feedback_hint</item>
        <item name="android:maxLength">50</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <!-- Submit Button Style -->
    <style name="SubmitButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:text">@string/submit_rating</item>
    </style>

    <!-- Reset Button Style -->
    <style name="ResetButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:text">@string/reset</item>
    </style>

    <!-- TextView Style -->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!-- Rating Display Text Style -->
    <style name="RatingTextViewStyle" parent="TextViewStyle">
        <item name="android:text">@string/rating_display</item>
        <item name="android:textSize">@dimen/rating_text_size</item>
    </style>

    <!-- Character Count TextView Style -->
    <style name="CharCountTextViewStyle" parent="TextViewStyle">
        <item name="android:text">@string/char_count</item>
    </style>
<style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
    <item name="android:textColorPrimary">@color/red</item>
</style>


</resources>

