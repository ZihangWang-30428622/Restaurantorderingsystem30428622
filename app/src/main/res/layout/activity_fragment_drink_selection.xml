<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drink_selection_layout"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/_9575cd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Juice Fragment -->
    <fragment
        android:id="@+id/juice_fragment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="au.edu.federation.itech3106.Restaurantorderingsystem30428622.JuiceFragment"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/lanmei_fragment_container"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0" />

    <fragment
        android:id="@+id/lanmei_fragment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="au.edu.federation.itech3106.Restaurantorderingsystem30428622.LanmeiFragment"
        app:layout_constraintTop_toBottomOf="@id/juice_fragment_container"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_sugar"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="0" />

    <!-- Sugar Checkbox -->
    <CheckBox
        android:id="@+id/checkbox_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Add_more_sugar_on_juice"
        app:layout_constraintBottom_toTopOf="@id/tv_total_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_8dp" />


    <!-- Total Price TextView -->
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_00_00_1"
        android:textColor="@color/_000000"
        android:textSize="@dimen/_24sp"
        android:layout_marginBottom="@dimen/_8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_1"
        android:backgroundTint="@color/_8e24aa"
        android:textColor="@color/ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_16dp"
        app:layout_constraintWidth_percent="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>
