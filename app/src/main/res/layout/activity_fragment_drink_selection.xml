<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drink_fragment_layout">

        <!-- CircleView -->
        <au.edu.federation.itech3106.Restaurantorderingsystem30428622.CircleView
            android:id="@+id/circle_view"
            style="@style/CircleViewStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarStyle3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Juice Fragment -->
        <fragment
            android:id="@+id/juice_fragment_container"
            style="@style/FragmentStyle"
            android:name="au.edu.federation.itech3106.Restaurantorderingsystem30428622.JuiceFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <!-- Lanmei Fragment -->
        <fragment
            android:id="@+id/lanmei_fragment_container"
            style="@style/FragmentStyle"
            android:name="au.edu.federation.itech3106.Restaurantorderingsystem30428622.LanmeiFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/juice_fragment_container" />

        <!-- Gongbao Fragment -->
        <fragment
            android:id="@+id/gongbao_fragment_container"
            style="@style/FragmentStyle"
            android:name="au.edu.federation.itech3106.Restaurantorderingsystem30428622.GongbaoFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lanmei_fragment_container" />

        <!-- Yuxiang Fragment -->
        <fragment
            android:id="@+id/yuxiang_fragment_container"
            style="@style/FragmentStyle"
            android:name="au.edu.federation.itech3106.Restaurantorderingsystem30428622.YuxiangFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gongbao_fragment_container" />

        <!-- Sugar Checkbox -->
        <CheckBox
            android:id="@+id/checkbox_sugar"
            style="@style/CheckboxStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yuxiang_fragment_container" />

        <!-- Total Price TextView -->
        <TextView
            android:id="@+id/tv_total_price"
            style="@style/TotalPriceTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox_sugar" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit"
            style="@style/ButtonStyle3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_price"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
